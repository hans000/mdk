    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "env": {
                "__DEV__": "null"
            },
            "program": "${workspaceRoot}/node_modules/ts-node/dist/bin.js",
            "args": [
              "${workspaceRoot}/test/index.ts"
            ],
            "runtimeArgs": [
                "--nolazy",
                "-r",
                "tsconfig-paths/register",
            ],
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }
    ]
}